<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="comqwera.mingrisoft.shousi.activity.activity.MyadressActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f7f9"
            android:padding="10dp">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的地址"
                android:textColor="#564c4c"
                android:textSize="18dp" />
    </LinearLayout>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
    >
        <!--第一行-->
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lianxiren_nickname"
                    android:textSize="22dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"/>

        </TableRow>
        <!--第二行-->
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="164dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lianxiren_phone"
                    android:textSize="22dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"/>


        </TableRow>
        <!--第三行-->
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:id="@+id/lianxiren_dizhi"
                    android:textColor="#000000"
                   />

        </TableRow>
        <!--第四行-->
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:id="@+id/lianxiren_menhao"
                    android:textColor="#000000"
                   />
        </TableRow>

    </TableLayout>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_adress"
            android:background="@drawable/loginbutton"
            android:text="修改地址"
            android:layout_gravity="center"/>

</LinearLayout>
