<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="comqwera.mingrisoft.shousi.activity.activity.OrderActivity">

    <LinearLayout
            android:id="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a0e1f4"
            android:padding="10dp">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="提交订单"
                android:textColor="#564c4c"
                android:textSize="18dp" />
    </LinearLayout>
<LinearLayout
        android:id="@+id/listView"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0f7f9"
        android:padding="10dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送达位置"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左先生"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="江西师范"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"/>

</LinearLayout>

   <LinearLayout
           android:id="@+id/linearLayout2"
           app:layout_constraintTop_toBottomOf="@id/listView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="#f0f7f9"
           android:padding="10dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="预计送达时间"
           android:textColor="#000000"
           android:textSize="15sp"
           android:layout_marginLeft="30dp"/>
       <TextView
               android:id="@+id/tv_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="12:00"
               android:textColor="#000000"
               android:textSize="15sp"
               android:layout_marginLeft="180dp"/>

   </LinearLayout>
    <LinearLayout
            android:id="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f0f7f9"
            android:padding="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginLeft="30dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginLeft="210dp"/>

    </LinearLayout>

    <ListView
            android:id="@+id/list_view2"
            app:layout_constraintTop_toBottomOf="@id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>


    <LinearLayout
            android:id="@+id/linearLayout4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:background="#aa686767"
                  android:gravity="center_vertical"
                  android:layout_alignParentBottom="true"
                  android:layout_height="50dp">


        <TextView
                  android:layout_marginLeft="30dp"
                  android:gravity="center_vertical"
                  android:text="￥ 0"
                  android:textSize="20sp"
                  android:textColor="#fff"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/tv_total"
                  android:layout_height="wrap_content" />


        <Button  android:textColor="#fff"
                  android:layout_width="120dp"
                  android:background="#22c222"
                  android:text="确认支付"
                  android:id="@+id/tv_surepay"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:layout_height="match_parent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
